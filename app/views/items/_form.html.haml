= form_for item, :action => (item.new_record? ? resource(:items) : url(:item, item)) do
  .field= text_field :title, :label => 'Title'
  .field= select :publisher_id, :label => 'Publisher', :collection => @publishers, :text_method => :name, :value_method => :id, :include_blank => true
  .inline
    .field= text_field :isbn, :label => 'ISBN', :class => 'medium'
    .field= text_field :pages, :label => 'Pages', :class => 'small'
    .field= select :location_id, :label => 'Location', :collection => @locations, :text_method => :name, :value_method => :id, :include_blank => true
  .field= text_area :description, :label => 'Description'
  .field= submit(item.new_record? ? 'Create' : 'Update')